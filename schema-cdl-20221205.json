              },
              "modification": {
                "$ref": "#/definitions/modification"
              },
              "description_string": {
                "type": "string"
              }
            }
          }
        },
        {
          "type": "object",
          "additionalItems": false,
          "properties": {
            "Line": {
              "$ref": "#/definitions/Line"
            }
          }
        },
        {
          "type": "object",
          "additionalItems": false,
          "properties": {
            "Text": {
