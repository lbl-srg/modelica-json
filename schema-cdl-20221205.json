{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema-cdl.json",
  "type": "array",
  "title": "JSON parsed Modelica file",
  "description": "Json representation of a Modelica model",
  "$comment": "Version 2, 12/05/2022",
  "definitions": {
    "additionalItems": false,
    "items": {
      "type": "object",
      "required": [
        "within",
        "class_definition"
      ],
      "additionalProperties": false,
      "properties": {
        "within": {
          "description": "Within statement from the Modelica file : no special characters or spaces. If empty string, it may be a package file.",
          "type": "string",
          "pattern": "^([a-zA-Z0-9._*]*)$"
        },
        "class_definition": {
          "$ref": "#/definitions/class_definition"
        },
        "modelicaFile": {
          "description": "Relative modelica file path.",
          "type": "string"
        },
        "fullMoFilePath": {
          "description": "Absolute modelica file path.",
          "type": "string"
        },
        "checkSum": {
          "description": "Checksum record of the modelica file",
          "type": "string"
        }
      }
    },
    "class_definition": {
      "description": "Class definition",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [
          "class_prefixes",
          "class_specifier"
        ],
        "additionalProperties": false,
        "properties": {
          "class_prefixes": {
            "type": "string"
          },
          "class_specifier": {
            "$ref": "#/definitions/class_specifier"
          }
        }
      }
    },
    "class_specifier": {
      "description": "Class specifier",
      "oneOf": [
        {
          "type": "object",
          "additionalItems": false,
          "properties": {
            "long_class_specifier": {
              "$ref": "#/definitions/long_class_specifier"
            }
          }
        },
        {
          "type": "object",
          "additionalItems": false,
          "properties": {
            "short_class_specifier": {
              "$ref": "#/definitions/short_class_specifier"
            }
          }
        }
      ]
    },
    "long_class_specifier": {
      "description": "Long class specifier",
      "type": "object",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [
          "identifier",
          "composition",
          "description_string"
        ],
        "additionalProperties": false,
        "properties": {
          "identifier": {
            "type": "string"
          },
          "description_string": {
            "type": "string"
          },
          "composition": {
            "$ref": "#/definitions/composition"
          },
          "class_modification": {
            "$ref": "#/definitions/class_modification"
          }
        }
      }
    },
    "composition": {
      "description": "Composition",
      "type": "object",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [
          "annotation"
        ],
        "additionalProperties": false,
        "properties": {
          "element_list": {
            "$ref": "#/definitions/element_list"
          },
          "element_sections": {
            "$ref": "#/definitions/element_sections"
          },
          "annotation": {
            "$ref": "#/definitions/class_modification"
          }
        }
      }
    },
    "class_modification": {
      "description": "Class modification",
      "oneOf": [
        {
          "type": "array",
          "additionalItems": false,
          "items": {
            "type": "object",
            "required": [
              "element_modification_or_replaceable"
            ],
            "additionalProperties": false,
            "properties": {
              "element_modification_or_replaceable": {
                "$ref": "#/definitions/element_modification_or_replaceable"
              }
            }
          }
        },
        {
          "type": "string"
        }
      ]
    },
    "element_list": {
      "description": "Element list",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [
          "component_clause"
        ],
        "additionalProperties": false,
        "properties": {
          "final": {
            "type": "boolean"
          },
          "component_clause": {
            "$ref": "#/definitions/component_clause"
          },
          "description": {
            "$ref": "#/definitions/descriptionSchema"
          }
        }
      }
    },
    "element_sections": {
      "description": "Element sections",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "public_element_list": {
            "$ref": "#/definitions/element_list"
          },
          "protected_element_list": {
            "$ref": "#/definitions/element_list"
          },
          "equation_section": {
            "$ref": "#/definitions/equation_section"
          }
        }
      }
    },
    "component_clause": {
      "description": "Component clause",
      "type": "object",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [
          "type_prefix",
          "type_specifier",
          "component_list"
        ],
        "additionalProperties": false,
        "properties": {
          "type_prefix": {
            "type": "string"
          },
          "type_specifier": {
            "type": "string"
          },
          "array_subscripts": {
            "$ref": "#/definitions/array_subscripts"
          },
          "component_list": {
            "$ref": "#/definitions/component_list"
          }
        }
      }
    },
    "component_list": {
      "description": "Component list",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [
          "declaration",
          "description"
        ],
        "additionalProperties": false,
        "properties": {
          "declaration": {
            "$ref": "#/definitions/declaration"
          },
          "condition_attribute": {
            "$ref": "#/definitions/condition_attribute"
          },
          "description": {
            "$ref": "#/definitions/descriptionSchema"
          }
        }
      }
    },
    "condition_attribute": {
