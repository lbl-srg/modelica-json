      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "expression": {
            "$ref": "#/definitions/expression"
          }
        }
      }
    },
    "element_modification": {
      "description": "Element modification",
      "oneOf": [
        {
          "type": "object",
          "additionalItems": false,
          "items": {
            "type": "object",
